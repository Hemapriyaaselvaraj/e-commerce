function applyCouponCode(code) {
  document.getElementById("couponInput").value = code;
  Swal.close();
  applyCoupon();
}

async function applyCoupon() {
  const code = document.getElementById("couponInput").value.trim().toUpperCase();
  
  if (!code) {
    document.getElementById("couponMessage").innerText = "Please enter a coupon code";
    document.getElementById("couponMessage").style.color = "#dc3545";
    return;
  }

  const res = await fetch("/order/apply-coupon", {
    method: "PATCH",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ couponCode: code })
  });

  const data = await res.json();

  document.getElementById("couponMessage").innerText = data.message;
  document.getElementById("couponMessage").style.color = data.success ? "#198754" : "#dc3545";

  if (data.success) {
    // Show coupon discount section
    document.getElementById("couponDiscountSection").style.display = "block";
    document.getElementById("appliedCouponCode").innerText = code;
    document.getElementById("discountValue").innerText = "-₹" + data.discount;
    document.getElementById("grandTotal").innerText = "₹" + data.grandTotal;
    document.getElementById("couponInput").value = code;
    
    // Update COD availability after coupon is applied
    updateCODAvailability();
  } else {
    // Hide coupon discount section on error
    document.getElementById("couponDiscountSection").style.display = "none";
  }
}

async function removeCoupon() {
  const code = document.getElementById("couponInput").value;

  const res = await fetch("/order/remove-coupon", {
    method: "DELETE",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ couponCode: code })
  });

  const data = await res.json();
  document.getElementById("couponMessage").innerText = data.message;
  document.getElementById("couponMessage").style.color = data.success ? "#198754" : "#dc3545";

  if (data.success) {
    // Hide coupon discount section
    document.getElementById("couponDiscountSection").style.display = "none";
    document.getElementById("couponInput").value = "";
    // Refresh to update totals
    location.reload();
  }
}

// Function to check and update COD availability
function updateCODAvailability() {
  const grandTotalText = document.getElementById('grandTotal').textContent;
  const grandTotal = parseFloat(grandTotalText.replace('₹', '').replace(',', ''));
  const codOption = document.getElementById('codOption');
  const codRadio = document.getElementById('codRadio');
  const codDescription = document.getElementById('codDescription');
  
  if (grandTotal > 1000) {
    codOption.classList.add('disabled');
    codRadio.disabled = true;
    codDescription.textContent = 'Not available for orders above Rs 1000';
    
    // If COD is currently selected, deselect it
    if (codRadio.checked) {
      codRadio.checked = false;
      // Select Razorpay as default
      const razorpayRadio = document.querySelector('input[name="paymentMethod"][value="RAZORPAY"]');
      if (razorpayRadio) {
        razorpayRadio.checked = true;
      }
    }
  } else {
    codOption.classList.remove('disabled');
    codRadio.disabled = false;
    codDescription.textContent = 'Pay in cash when the package arrives';
  }
}

// Call on page load
document.addEventListener('DOMContentLoaded', function() {
  updateCODAvailability();
});

