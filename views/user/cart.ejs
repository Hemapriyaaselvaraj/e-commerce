<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shopping Cart - ToughToes</title>

  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />

  <style>
    /* Base layout reset */
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      font-family: Arial, sans-serif;
      color: #333;
    }

    main { flex: 1; }

    /* Navbar (copied from wishlist page for consistent look) */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #ddd;
    }

    .nav-links a {
      margin: 0 1rem;
      text-decoration: none;
      color: #000;
    }

    .nav-right {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-left: auto;
      margin-right: 1.5rem;
    }

    .search-input {
      padding: 0.5rem;
      border: 1px solid #ccc;
      min-width: 180px;
    }

    .logo {
      margin-left: 0.5rem;
    }

    /* Cart page container shifted down so fixed navbar doesn't overlap */
    .cart-container {
      padding: 40px;
      margin-top: 100px;
    }

    /* Cart specific styles */
    .cart-content {
      display: flex;
      justify-content: space-between;
      gap: 40px;
    }

    .cart-items {
      flex: 2;
    }

    .cart-item {
      display: flex;
      align-items: center;
      gap: 20px;
      border-bottom: 1px solid #eee;
      padding: 20px 0;
    }

    .cart-item img {
      width: 100px;
      border-radius: 10px;
      object-fit: cover;
    }

    .item-info h4 {
      margin: 0 0 5px;
    }

    .quantity {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .quantity button {
      padding: 5px 10px;
      cursor: pointer;
    }

    .price {
      font-size: 16px;
      font-weight: bold;
    }

    .price small {
      display: block;
      font-weight: normal;
      color: #777;
    }

    .delete-icon {
      cursor: pointer;
      color: #999;
    }

    .continue-shopping {
      display: inline-block;
      margin-top: 20px;
      text-decoration: none;
      color: #555;
    }

    .order-summary {
      flex: 1;
      border: 1px solid #ddd;
      padding: 20px;
      border-radius: 10px;
      min-width: 280px;
    }

    .order-summary h3 {
      margin-bottom: 20px;
    }

    .summary-line {
      display: flex;
      justify-content: space-between;
      margin: 10px 0;
    }

    .total {
      font-weight: bold;
      font-size: 18px;
    }

    .checkout-btn {
      width: 100%;
      background: black;
      color: white;
      padding: 12px;
      border: none;
      margin-top: 20px;
      cursor: pointer;
      font-size: 16px;
      border-radius: 5px;
    }

    /* visually indicate disabled state */
    .checkout-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      background: #777;
    }

    .secure-checkout {
      text-align: center;
      margin: 10px 0;
      font-size: 14px;
    }

    .payment-methods {
      display: flex;
      gap: 10px;
      justify-content: center;
    }

    .payment-methods img {
      width: 40px;
    }

    footer {
      background: #111;
      color: #fff;
      padding: 40px;
    }

    .footer-section {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    .footer-left {
      max-width: 200px;
    }

    .footer-links div {
      margin-right: 40px;
    }

    .footer-links h5 {
      margin-bottom: 10px;
    }

    .footer-links ul {
      list-style: none;
      padding: 0;
    }

    .footer-links a {
      color: #ccc;
      text-decoration: none;
      display: block;
      margin: 5px 0;
    }

    .social-icons i {
      margin-right: 10px;
    }

    footer p {
      text-align: center;
      margin-top: 20px;
      font-size: 14px;
      color: #aaa;
    }

    /* Responsive Styles */
    @media (max-width: 992px) {
      .cart-content {
        flex-direction: column;
      }

      .cart-items,
      .order-summary {
        flex: unset;
        width: 100%;
      }

      .cart-container {
        padding: 20px;
      }

      .cart-item {
        flex-direction: column;
        align-items: flex-start;
      }

      .cart-item > div:last-child {
        margin-top: 15px;
        width: 100%;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 10px;
      }
    }

    @media (max-width: 576px) {
      .cart-item img {
        width: 80px;
        height: 80px;
      }

      .order-summary {
        padding: 15px;
        min-width: 100%;
      }

      .checkout-btn {
        font-size: 14px;
        padding: 10px;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/userNavbar') %>

  <main class="cart-container">
    <h2>Shopping Cart</h2>
    <p><%= items.length %> item<%= items.length === 1 ? '' : 's' %> in your cart</p>

    <div class="cart-content">
      <div class="cart-items">
        <% if (items.length) { %>
        <% items.forEach(function(item) { %>
        <div
          class="cart-item"
          style="display:flex; align-items:center; justify-content:space-between; gap:16px;"
        >
          <div style="display:flex; align-items:center; gap:16px;">
            <img
              src="<%= item.image %>"
              alt="<%= item.name %>"
              style="width:80px; height:80px; object-fit:cover; border-radius:8px;"
            />
            <div class="item-info">
              <h4><%= item.name %></h4>
              <p>
                Size: <%= item.size %><br />
                Color: <%= item.color %>
              </p>
              <div class="cart-pricing">
                <span style="color:#888; text-decoration:line-through;"
                  >₹<%= item.priceBefore %></span
                >
                <span
                  style="color:#222; font-weight:600; margin-left:8px;"
                  >₹<%= item.priceAfter %></span
                >
                <% if (item.discount > 0) { %>
                <span style="color:#e67e22; margin-left:8px;"
                  >( <%= item.discount %>% OFF )</span
                >
                <% } %>
              </div>
              <% if (item.isActive === false) { %>
              <div
                style="
                  color:#842029;
                  background:#f8d7da;
                  border:1px solid #f5c2c7;
                  border-radius:4px;
                  padding:4px 8px;
                  margin-top:8px;
                  font-size:0.95em;
                  display:inline-block;
                "
              >
                This product is inactive and cannot be purchased. Please remove it
                from your cart.
              </div>
              <% } else if (item.stock === 0) { %>
              <div
                style="
                  color:#842029;
                  background:#f8d7da;
                  border:1px solid #f5c2c7;
                  border-radius:4px;
                  padding:4px 8px;
                  margin-top:8px;
                  font-size:0.95em;
                  display:inline-block;
                "
              >
                This product is out of stock and cannot be purchased. Please remove
                it from your cart.
              </div>
              <% } %>
            </div>
          </div>
          <div style="display:flex; align-items:center; gap:24px;">
            <% if (item.isActive === false || item.stock == 0) { %>
            <div
              class="quantity"
              style="display:flex; align-items:center; gap:6px; opacity:0.5; pointer-events:none;"
            >
              <button class="decrement-btn" disabled>-</button>
              <span class="cart-quantity"><%= item.quantity %></span>
              <button class="increment-btn" disabled>+</button>
            </div>
            <div class="price" style="font-weight:600; opacity:0.5;">
              ₹<%= item.total %> <small style="font-weight:400;">₹<%= item.priceAfter %> each</small>
            </div>
            <i
              class="fa-solid fa-trash delete-icon"
              data-cart-item-id="<%= item._id %>"
              style="cursor:pointer; color:#d9534f; font-size:1.2rem;"
            ></i>
            <% } else { %>
            <div
              class="quantity"
              style="display:flex; align-items:center; gap:6px; flex-direction:column; align-items:flex-start;"
            >
              <div style="display:flex; align-items:center; gap:6px;">
                <button
                  class="decrement-btn"
                  data-cart-item-id="<%= item._id %>"
                  <%= item.quantity <= 1 ? 'disabled' : '' %>
                >
                  -
                </button>
                <span
                  class="cart-quantity"
                  data-cart-item-id="<%= item._id %>"
                  data-stock="<%= item.stock %>"
                  > <%= item.quantity %> </span
                >
                <button
                  class="increment-btn"
                  data-cart-item-id="<%= item._id %>"
                  <%= item.quantity >= 5 || item.quantity >= item.stock ? 'disabled' : '' %>
                >
                  +
                </button>
              </div>
              <div
                class="cart-qty-limit-message"
                id="cart-qty-limit-message-<%= item._id %>"
                style="
                  display: none;
                  color: #b94a48;
                  background: #f8d7da;
                  border: 1px solid #f5c2c7;
                  border-radius: 6px;
                  font-size: 0.97em;
                  margin-top: 8px;
                  padding: 6px 14px 6px 12px;
                  line-height: 1.4;
                  max-width: 340px;
                  min-width: 180px;
                  min-height: 0;
                "
              ></div>
            </div>
            <div class="price" style="font-weight:600;">
              ₹<%= item.total %> <small style="font-weight:400;">₹<%= item.priceAfter %> each</small>
            </div>
            <i
              class="fa-solid fa-trash delete-icon"
              data-cart-item-id="<%= item._id %>"
              style="cursor:pointer; color:#d9534f; font-size:1.2rem;"
            ></i>
            <% } %>
          </div>
        </div>
        <% }) %>
        <% } else { %>
        <p>Your cart is empty.</p>
        <% } %>
        <a href="/products" class="continue-shopping">&larr; Continue Shopping</a>
      </div>

      <div class="order-summary">
        <h3>Order Summary</h3>
        <div class="summary-line">
          <span>Subtotal</span><span>₹<%= subtotal %></span>
        </div>
        <div class="summary-line">
          <span>Shipping</span><span>₹<%= shipping %></span>
        </div>
        <hr />
        <div class="summary-line total">
          <span>Total</span><span>₹<%= total %></span>
        </div>
        <p style="font-size: 0.85rem; color: #666; margin-top: 0.5rem; text-align: center;">* All prices include applicable taxes</p>
  <button class="checkout-btn" id="proceedToCheckoutBtn" <%= items.length === 0 ? 'disabled title="Your cart is empty"' : '' %>>Proceed to Checkout</button>
        <p class="secure-checkout"
          ><i class="fa-solid fa-lock"></i> Secure Checkout</p
        >
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script>
    document.getElementById("proceedToCheckoutBtn")?.addEventListener("click", function () {
      window.location.href = "/checkout";
    });
    document.addEventListener("DOMContentLoaded", function () {
      document.querySelectorAll(".increment-btn").forEach((btn) => {
        const cartItemId = btn.getAttribute("data-cart-item-id");
        const qtySpan = document.querySelector(
          '.cart-quantity[data-cart-item-id="' + cartItemId + '"]'
        );
        const limitMsg = document.getElementById("cart-qty-limit-message-" + cartItemId);
        if (limitMsg) {
          limitMsg.textContent = "";
          limitMsg.style.display = "none";
        }
        btn.addEventListener("click", function () {
          if (btn.disabled) return;
          fetch("/cart/updateQuantity", {
            method: "PATCH",
            headers: { "Content-Type": "application/json", Accept: "application/json" },
            body: JSON.stringify({ cartItemId, action: "increment" }),
          })
            .then((res) => res.json())
            .then((data) => {
              if (data.success) {
                document
                  .querySelectorAll('.cart-quantity[data-cart-item-id="' + cartItemId + '"]')
                  .forEach((q) => (q.textContent = data.quantity));
                if (limitMsg) {
                  limitMsg.textContent = "";
                  limitMsg.style.display = "none";
                }
                location.reload();
              } else {
                let msg = "";
                if (data.message && (data.message.includes("5") || data.message.includes("maximum"))) {
                  msg = "You cannot add more than 5 of this product to your cart.";
                } else if (
                  data.message &&
                  (data.message.toLowerCase().includes("stock") ||
                    data.message.toLowerCase().includes("out of stock"))
                ) {
                  msg = "Sorry, this product is currently out of stock and cannot be increased further.";
                } else {
                  msg = data.message || "Could not increase quantity.";
                }
                if (limitMsg) {
                  limitMsg.textContent = msg;
                  limitMsg.style.display = msg ? "block" : "none";
                }
              }
            })
            .catch(() => {
              if (limitMsg) {
                limitMsg.textContent = "Could not increase quantity.";
                limitMsg.style.display = "block";
              }
            });
        });
      });

      document.querySelectorAll(".decrement-btn").forEach((btn) => {
        btn.addEventListener("click", function () {
          const cartItemId = this.getAttribute("data-cart-item-id");
          const qtySpan = document.querySelector('.cart-quantity[data-cart-item-id="' + cartItemId + '"]');
          const limitMsg = document.getElementById("cart-qty-limit-message-" + cartItemId);
          fetch("/cart/updateQuantity", {
            method: "PATCH",
            headers: { "Content-Type": "application/json", Accept: "application/json" },
            body: JSON.stringify({ cartItemId, action: "decrement" }),
          })
            .then((res) => res.json())
            .then((data) => {
              if (data.success) {
                document
                  .querySelectorAll('.cart-quantity[data-cart-item-id="' + cartItemId + '"]')
                  .forEach((q) => (q.textContent = data.quantity));
                if (limitMsg) {
                  limitMsg.textContent = "";
                  limitMsg.style.display = "none";
                }
                location.reload();
              } else {
                let msg = "";
                if (data.message && (data.message.includes("5") || data.message.includes("maximum"))) {
                  msg = "You cannot add more than 5 of this product to your cart.";
                } else if (
                  data.message &&
                  (data.message.toLowerCase().includes("stock") || data.message.toLowerCase().includes("out of stock"))
                ) {
                  msg = "Out of stock.";
                } else {
                  msg = data.message || "Could not decrease quantity.";
                }
                if (limitMsg) {
                  limitMsg.textContent = msg;
                  limitMsg.style.display = msg ? "block" : "none";
                }
              }
            })
            .catch(() => {
              if (limitMsg) {
                limitMsg.textContent = "Could not decrease quantity.";
                limitMsg.style.display = "block";
              }
            });
        });
      });

      document.querySelectorAll(".delete-icon, .delete-icon-active").forEach((icon) => {
        icon.addEventListener("click", function () {
          const cartItemId = this.getAttribute("data-cart-item-id");
          fetch("/cart/remove", {
            method: "DELETE",
            headers: { "Content-Type": "application/json", Accept: "application/json" },
            body: JSON.stringify({ cartItemId }),
          })
            .then((res) => res.json())
            .then((data) => {
              if (data.success) {
                this.closest(".cart-item").remove();
                location.reload();
              } else {
                if (typeof Swal !== 'undefined') {
                  Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message || "Could not remove item.",
                    confirmButtonColor: '#d33'
                  });
                } else {
                  alert(data.message || "Could not remove item.");
                }
              }
            })
            .catch(() => {
              if (typeof Swal !== 'undefined') {
                Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: "Could not remove item.",
                  confirmButtonColor: '#d33'
                });
              } else {
                alert("Could not remove item.");
              }
            });
        });
      });
    });
  </script>
</body>
</html>