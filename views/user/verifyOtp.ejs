<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Verify OTP - ToughToes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <meta http-equiv="Cache-Control" content="no-store" />

  <style>
    /* Push main content below fixed navbar */
    .main-content {
      margin-top: 120px;
    }
    
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
      margin: 0;
      color: #000;
    }

    /* Navbar Styles (copied from login.ejs for consistency) */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #ddd;
    }
    .nav-links a {
      margin: 0 1rem;
      text-decoration: none;
      color: #000;
    }
    .nav-right {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-left: auto;
      margin-right: 1.5rem;
    }
    .logo {
      margin-left: 0.5rem;
    }
    .btn-login {
      background: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      padding: 0.4rem 1.1rem;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.2s;
      margin-left: 0.5rem;
    }
    .btn-login:hover {
      background: #0056b3;
    }
    .btn-logout {
      background: #fff;
      color: #dc3545;
      border: 1px solid #dc3545;
      border-radius: 4px;
      padding: 0.4rem 1.1rem;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.2s, color 0.2s;
      margin-left: 0.5rem;
    }
    .btn-logout:hover {
      background: #dc3545;
      color: #fff;
    }

    .verify-box {
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    .otp-box {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-bottom: 20px;
      flex-wrap: nowrap;
    }
    .otp-input {
      width: 45px;
      height: 45px;
      font-size: 20px;
      text-align: center;
      border: 1px solid #ccc;
      border-radius: 6px;
      outline: none;
    }
    .otp-input:focus {
      border-color: black;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    footer {
      background-color: #1c1c1c;
      color: #ffffff;
      padding: 40px 0 20px;
      margin-top: 60px;
    }
    footer a {
      color: #fff;
      text-decoration: none;
    }
    footer h6 {
      font-weight: bold;
    }
    footer .col {
      margin-bottom: 20px;
    }
    footer .fab {
      font-size: 18px;
      margin-right: 15px;
    }

    @media (max-width: 768px) {
      .verify-box {
        width: 90%;
        margin: 0 auto;
      }
      .otp-input {
        width: 36px;
        height: 38px;
        font-size: 16px;
      }
      footer .row {
        display: flex;
        flex-direction: column;
      }
      footer .col {
        margin-bottom: 15px;
      }
    }

    @media (max-width: 480px) {
      .verify-box {
        max-width: 99vw;
        padding: 1rem;
      }
      .verify-box h5 {
        font-size: 1rem;
      }
      
      nav .navbar-brand {
        font-size: 1.2rem;
      }

      footer h6 {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
    <%- include('../partials/userNavbar') %>

  <div class="container main-content d-flex justify-content-center align-items-center" style="min-height: 70vh;" data-otp-expiry="<%- JSON.stringify(otpExpiry) %>">
    <div class="verify-box p-4 shadow rounded bg-white" style="max-width: 400px; width: 100%;">
      <div class="text-center mb-3">
        <i class="fas fa-mobile-alt fa-2x mb-2"></i>
        <h5>Enter Verification Code</h5>
        <p class="text-muted">We've sent a 6-digit code to your mail ending in ****il.com</p>
      </div>

      <% if (error) { %>
        <div class="alert alert-danger text-center" id="errorAlert">
          <%= error %>
          <br><small class="mt-2 d-block">You can request a new verification code using the "Resend OTP" link below.</small>
        </div>
      <% } %>

      <form method="post" action="/user/verifyOtp" onsubmit="return collectOTP()">
        <div class="otp-box">
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
        </div>
        <input type="hidden" name="otp" id="otp-full" />
        <input type="hidden" name="email" value="<%= email %>" />
        <input type="hidden" name="flow" value="<%= flow %>" />

        <button class="btn btn-dark w-100" type="submit">Verify Code</button>

        <div class="text-center mt-3">
          <small class="text-muted"><i class="fas fa-clock me-1"></i>Code expires in <span id="timer"></span></small>
          <p class="small mt-1 mb-0">Didn't receive the code?</p>
          <p class="small">
            <a href="#" id="resendOtpLink" style="pointer-events:none;opacity:0.5;text-decoration:none;color:black;">Resend OTP</a>
            <span id="resendAvailable" style="display:none;" class="text-success">
              <i class="fas fa-check-circle me-1"></i>Available now!
            </span>
          </p>
        </div>
        <hr />
        <div class="text-start">
          <a href="/user/login" class="text-decoration-none small"><i class="fas fa-arrow-left me-1"></i> Back to login</a>
        </div>
      </form>
    </div>
  </div>

  <footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <h5>ToughToes</h5>
          <p>Premium shoes for every step of your journey.</p>
        </div>
        <div class="col-md-3">
          <h6>Quick Links</h6>
          <ul class="list-unstyled">
            <li><a href="#" class="text-white-50">About Us</a></li>
            <li><a href="#" class="text-white-50">Contact</a></li>
            <li><a href="#" class="text-white-50">Size Guide</a></li>
            <li><a href="#" class="text-white-50">Returns</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h6>Categories</h6>
          <ul class="list-unstyled">
            <li><a href="#" class="text-white-50">Men's Shoes</a></li>
            <li><a href="#" class="text-white-50">Women's Shoes</a></li>
            <li><a href="#" class="text-white-50">Kids' Shoes</a></li>
            <li><a href="#" class="text-white-50">Sale</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h6>Follow Us</h6>
          <a href="#" class="text-white me-2"><i class="fab fa-facebook"></i></a>
          <a href="#" class="text-white me-2"><i class="fab fa-instagram"></i></a>
          <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
        </div>
      </div>
      <hr class="border-white-50">
      <p class="text-center text-white-50 m-0">Â© 2025 ToughToes. All rights reserved.</p>
    </div>
  </footer>

  <script>
    const inputs = document.querySelectorAll(".otp-input");
    inputs.forEach((input, index) => {
      input.addEventListener("input", (e) => {
        // Only allow numeric input
        const value = e.target.value.replace(/[^0-9]/g, '');
        e.target.value = value;
        
        if (value.length === 1 && index < inputs.length - 1) {
          inputs[index + 1].focus();
        }
      });
      
      // Handle backspace to move to previous input
      input.addEventListener("keydown", (e) => {
        if (e.key === "Backspace" && !e.target.value && index > 0) {
          inputs[index - 1].focus();
        }
        
        // Prevent Enter key from submitting form unless all fields are filled
        if (e.key === "Enter") {
          e.preventDefault();
          
          // Check if all inputs are filled
          const allFilled = Array.from(inputs).every(inp => inp.value.length === 1);
          if (allFilled) {
            document.querySelector('form').submit();
          }
        }
      });
    });

    let timerSeconds = 60;
    const timerSpan = document.getElementById('timer');
    const resendOtpLink = document.getElementById('resendOtpLink');
    let timerInterval;
    
    // Much simpler approach: Only persist timer for very short time
    // This handles accidental refresh but clears for navigation
    
    const storedExpiry = sessionStorage.getItem('otpTimerExpiry');
    if (storedExpiry) {
      const now = new Date().getTime();
      const expiry = parseInt(storedExpiry);
      const timeSinceExpiry = now - expiry;
      
      // If the stored expiry is more than 2 minutes old, clear it
      // This handles cases where user navigated away long ago
      if (timeSinceExpiry > 120000) { // 2 minutes
        sessionStorage.removeItem('otpTimerExpiry');
      }
    }
    
    // Simple timer function
    function startTimer() {
      if (timerInterval) {
        clearInterval(timerInterval);
      }
      
      // Store the expiry time when starting timer
      const expiryTime = new Date().getTime() + (timerSeconds * 1000);
      sessionStorage.setItem('otpTimerExpiry', expiryTime.toString());
      
      // Update display immediately
      updateTimerDisplay();
      
      timerInterval = setInterval(() => {
        timerSeconds--;
        updateTimerDisplay();
        
        if (timerSeconds <= 0) {
          clearInterval(timerInterval);
          sessionStorage.removeItem('otpTimerExpiry');
          enableResendButton();
        }
      }, 1000);
    }
    
    function updateTimerDisplay() {
      if (timerSpan) {
        let min = Math.floor(timerSeconds / 60);
        let sec = timerSeconds % 60;
        timerSpan.textContent = `${min.toString().padStart(2, '0')}:${sec.toString().padStart(2, '0')}`;
      }
    }
    
    function enableResendButton() {
      if (resendOtpLink) {
        resendOtpLink.style.pointerEvents = 'auto';
        resendOtpLink.style.opacity = '1';
        resendOtpLink.textContent = 'Resend OTP';
      }
    }
    
    function disableResendButton() {
      if (resendOtpLink) {
        resendOtpLink.style.pointerEvents = 'none';
        resendOtpLink.style.opacity = '0.5';
        resendOtpLink.textContent = 'Resend OTP';
      }
    }
    
    // Calculate remaining time from sessionStorage
    function getRemainingTime() {
      const storedExpiry = sessionStorage.getItem('otpTimerExpiry');
      
      console.log('getRemainingTime - storedExpiry:', storedExpiry);
      
      if (storedExpiry) {
        const now = new Date().getTime();
        const expiry = parseInt(storedExpiry);
        const remainingMs = expiry - now;
        
        console.log('Timer calculation:', {
          now: new Date(now).toLocaleTimeString(),
          expiry: new Date(expiry).toLocaleTimeString(),
          remainingMs,
          remainingSeconds: Math.floor(remainingMs / 1000)
        });
        
        if (remainingMs > 0) {
          return Math.floor(remainingMs / 1000);
        } else {
          // Timer expired, clean up
          sessionStorage.removeItem('otpTimerExpiry');
          return 0;
        }
      }
      
      // No stored timer - this could be:
      // 1. First time loading the page (start fresh timer)
      // 2. Wrong OTP case (should still have timer, but backend didn't pass expiry)
      // 3. Timer already expired
      
      // Check if there's an error message (wrong OTP case)
      const errorAlert = document.getElementById('errorAlert');
      const hasError = errorAlert && errorAlert.textContent.trim().length > 0;
      
      console.log('No stored timer, hasError:', hasError);
      
      if (hasError) {
        // This is a wrong OTP case, but we don't have stored timer
        // We should still start a timer (backend should pass the remaining time)
        // For now, let's check if backend passed otpExpiry
        const container = document.querySelector('.container.main-content');
        const otpExpiryTime = container ? JSON.parse(container.getAttribute('data-otp-expiry')) : null;
        
        console.log('Backend otpExpiry:', otpExpiryTime);
        
        if (otpExpiryTime) {
          const now = new Date().getTime();
          const expiry = new Date(otpExpiryTime).getTime();
          const remainingMs = expiry - now;
          
          console.log('Using backend expiry:', {
            now: new Date(now).toLocaleTimeString(),
            expiry: new Date(expiry).toLocaleTimeString(),
            remainingMs,
            remainingSeconds: Math.floor(remainingMs / 1000)
          });
          
          if (remainingMs > 0) {
            return Math.floor(remainingMs / 1000);
          }
        }
        
        // If no valid server expiry, don't start timer for error case
        return 0;
      }
      
      // Fresh page load, start new timer
      console.log('Fresh page load, starting 60 second timer');
      return 60;
    }
    
    // Initialize timer
    const remainingTime = getRemainingTime();
    
    console.log('Timer initialization - remainingTime:', remainingTime);
    
    if (remainingTime > 0) {
      // Start timer with remaining time
      timerSeconds = remainingTime;
      disableResendButton();
      startTimer();
    } else {
      // Timer expired or no valid timer
      timerSeconds = 0;
      updateTimerDisplay();
      enableResendButton();
      
      // Show available indicator if there's an error and no active timer
      const errorAlert = document.getElementById('errorAlert');
      const resendAvailable = document.getElementById('resendAvailable');
      if (errorAlert && errorAlert.textContent.trim().length > 0 && resendAvailable) {
        resendAvailable.style.display = 'inline';
      }
    }

    resendOtpLink.addEventListener('click', function(e) {
      if (resendOtpLink.style.pointerEvents === 'auto') {
        e.preventDefault();
        
        // Clear any existing error messages
        const errorAlert = document.getElementById('errorAlert');
        if (errorAlert) {
          errorAlert.style.display = 'none';
        }
        
        // Hide resend available indicator
        const resendAvailable = document.getElementById('resendAvailable');
        if (resendAvailable) {
          resendAvailable.style.display = 'none';
        }
        
        // Clear OTP input fields
        const otpInputs = document.querySelectorAll('.otp-input');
        otpInputs.forEach(input => {
          input.value = '';
        });
        if (otpInputs.length > 0) {
          otpInputs[0].focus();
        }
        
        resendOtpLink.textContent = 'Resending...';
        resendOtpLink.style.pointerEvents = 'none';
        resendOtpLink.style.opacity = '0.5';
        
        fetch('/user/resendOtp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: document.querySelector('input[name="email"]').value })
        })
        .then(response => response.json())
        .then(data => {
          // Clear any existing timer
          if (timerInterval) {
            clearInterval(timerInterval);
          }
          
          // Reset timer to 60 seconds and start
          timerSeconds = 60;
          disableResendButton();
          startTimer();
          
          // Show success message with SweetAlert
          Swal.fire({
            icon: 'success',
            title: 'OTP Sent!',
            text: 'A new verification code has been sent to your email.',
            confirmButtonColor: '#28a745'
          });
        })
        .catch(error => {
          enableResendButton();
          
          // Show error message with SweetAlert
          Swal.fire({
            icon: 'error',
            title: 'Failed to Send OTP',
            text: 'Unable to resend verification code. Please try again.',
            confirmButtonColor: '#d33'
          });
        });
      }
    });
  </script>

  <script>
    function collectOTP() {
      const inputs = document.querySelectorAll('.otp-input');
      let otp = '';
      inputs.forEach(input => { otp += input.value; });
      document.getElementById('otp-full').value = otp;
      if (otp.length !== 6) {
        Swal.fire({
          icon: 'warning',
          title: 'Incomplete OTP',
          text: 'Please enter all 6 digits of the verification code',
          confirmButtonColor: '#ffc107'
        });
        return false;
      }
      return true; 
    }

    // This function is called on DOMContentLoaded to handle any edge cases
    function enableResendOnError() {
      // The main logic is now handled in initialization
      // This is just a safety check
    }

    // Check for error on page load
    document.addEventListener('DOMContentLoaded', function() {
      enableResendOnError();
    });

    // Clear timer when OTP is successfully submitted
    document.querySelector('form').addEventListener('submit', function() {
      // Only clear if the form validation passes (all 6 digits entered)
      const inputs = document.querySelectorAll('.otp-input');
      const allFilled = Array.from(inputs).every(inp => inp.value.length === 1);
      if (allFilled) {
        if (timerInterval) {
          clearInterval(timerInterval);
        }
        sessionStorage.removeItem('otpTimerExpiry');
      }
    });

    // Clear timer when user clicks "Back to login" link
    const backToLoginLink = document.querySelector('a[href="/user/login"]');
    if (backToLoginLink) {
      backToLoginLink.addEventListener('click', function() {
        sessionStorage.removeItem('otpTimerExpiry');
        if (timerInterval) {
          clearInterval(timerInterval);
        }
      });
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>