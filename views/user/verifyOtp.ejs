  <style>
    /* Push main content below fixed navbar */
    .main-content {
      margin-top: 120px;
    }
    
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
      margin: 0;
      color: #000;
    }

    /* Navbar Styles (copied from login.ejs for consistency) */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #ddd;
    }
    .nav-links a {
      margin: 0 1rem;
      text-decoration: none;
      color: #000;
    }
    .nav-right {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-left: auto;
      margin-right: 1.5rem;
    }
    .logo {
      margin-left: 0.5rem;
    }
    .btn-login {
      background: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      padding: 0.4rem 1.1rem;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.2s;
      margin-left: 0.5rem;
    }
    .btn-login:hover {
      background: #0056b3;
    }
    .btn-logout {
      background: #fff;
      color: #dc3545;
      border: 1px solid #dc3545;
      border-radius: 4px;
      padding: 0.4rem 1.1rem;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.2s, color 0.2s;
      margin-left: 0.5rem;
    }
    .btn-logout:hover {
      background: #dc3545;
      color: #fff;
    }

    .verify-box {
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    .otp-box {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-bottom: 20px;
      flex-wrap: nowrap;
    }
    .otp-input {
      width: 45px;
      height: 45px;
      font-size: 20px;
      text-align: center;
      border: 1px solid #ccc;
      border-radius: 6px;
      outline: none;
    }
    .otp-input:focus {
      border-color: black;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    footer {
      background-color: #1c1c1c;
      color: #ffffff;
      padding: 40px 0 20px;
      margin-top: 60px;
    }
    footer a {
      color: #fff;
      text-decoration: none;
    }
    footer h6 {
      font-weight: bold;
    }
    footer .col {
      margin-bottom: 20px;
    }
    footer .fab {
      font-size: 18px;
      margin-right: 15px;
    }

    @media (max-width: 768px) {
      .verify-box {
        width: 90%;
        margin: 0 auto;
      }
      .otp-input {
        width: 36px;
        height: 38px;
        font-size: 16px;
      }
      footer .row {
        display: flex;
        flex-direction: column;
      }
      footer .col {
        margin-bottom: 15px;
      }
    }

    @media (max-width: 480px) {
      .verify-box {
        max-width: 99vw;
        padding: 1rem;
      }
      .verify-box h5 {
        font-size: 1rem;
      }
      
      nav .navbar-brand {
        font-size: 1.2rem;
      }

      footer h6 {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
    <%- include('../partials/userNavbar') %>

  <div class="container main-content d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="verify-box p-4 shadow rounded bg-white" style="max-width: 400px; width: 100%;">
      <div class="text-center mb-3">
        <i class="fas fa-mobile-alt fa-2x mb-2"></i>
        <h5>Enter Verification Code</h5>
        <p class="text-muted">We've sent a 6-digit code to your mail ending in ****il.com</p>
      </div>

      <% if (error) { %>
        <div class="alert alert-danger text-center"><%= error %></div>
      <% } %>

      <form method="post" action="/user/verifyOtp" onsubmit="return collectOTP()">
        <div class="otp-box">
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
          <input type="text" class="otp-input" maxlength="1" />
        </div>
        <input type="hidden" name="otp" id="otp-full" />
        <input type="hidden" name="email" value="<%= email %>" />
        <input type="hidden" name="flow" value="<%= flow %>" />

        <button class="btn btn-dark w-100" type="submit">Verify Code</button>

        <div class="text-center mt-3">
          <small class="text-muted"><i class="fas fa-clock me-1"></i>Code expires in <span id="timer"></span></small>
          <p class="small mt-1 mb-0">Didn't receive the code?</p>
          <p class="small">
            <a href="#" id="resendOtpLink" style="pointer-events:none;opacity:0.5;">Resend OTP</a>
          </p>
        </div>
        <hr />
        <div class="text-start">
          <a href="/user/login" class="text-decoration-none small"><i class="fas fa-arrow-left me-1"></i> Back to login</a>
        </div>
      </form>
    </div>
  </div>

  <footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <h5>ToughToes</h5>
          <p>Premium shoes for every step of your journey.</p>
        </div>
        <div class="col-md-3">
          <h6>Quick Links</h6>
          <ul class="list-unstyled">
            <li><a href="#" class="text-white-50">About Us</a></li>
            <li><a href="#" class="text-white-50">Contact</a></li>
            <li><a href="#" class="text-white-50">Size Guide</a></li>
            <li><a href="#" class="text-white-50">Returns</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h6>Categories</h6>
          <ul class="list-unstyled">
            <li><a href="#" class="text-white-50">Men's Shoes</a></li>
            <li><a href="#" class="text-white-50">Women's Shoes</a></li>
            <li><a href="#" class="text-white-50">Kids' Shoes</a></li>
            <li><a href="#" class="text-white-50">Sale</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h6>Follow Us</h6>
          <a href="#" class="text-white me-2"><i class="fab fa-facebook"></i></a>
          <a href="#" class="text-white me-2"><i class="fab fa-instagram"></i></a>
          <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
        </div>
      </div>
      <hr class="border-white-50">
      <p class="text-center text-white-50 m-0">Â© 2025 ToughToes. All rights reserved.</p>
    </div>
  </footer>

  <script>
    const inputs = document.querySelectorAll(".otp-input");
    inputs.forEach((input, index) => {
      input.addEventListener("input", () => {
        if (input.value.length === 1 && index < inputs.length - 1) {
          inputs[index + 1].focus();
        }
      });
    });

    let timerSeconds = 60;
    const timerSpan = document.getElementById('timer');
    const resendOtpLink = document.getElementById('resendOtpLink');
    let timerInterval = setInterval(() => {
      let min = Math.floor(timerSeconds / 60);
      let sec = timerSeconds % 60;
      timerSpan.textContent = `${min.toString().padStart(2, '0')}:${sec.toString().padStart(2, '0')}`;
      if (timerSeconds <= 0) {
        clearInterval(timerInterval);
        resendOtpLink.style.pointerEvents = 'auto';
        resendOtpLink.style.opacity = '1';
        resendOtpLink.textContent = 'Resend OTP';
      } else {
        timerSeconds--;
      }
    }, 1000);

    resendOtpLink.addEventListener('click', function(e) {
      if (resendOtpLink.style.pointerEvents === 'auto') {
        e.preventDefault();
        resendOtpLink.textContent = 'Resending...';
        resendOtpLink.style.pointerEvents = 'none';
        resendOtpLink.style.opacity = '0.5';
        fetch('/user/sendOtp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: document.querySelector('input[name="email"]').value })
        })
        .then(data => {
          timerSeconds = 60;
          resendOtpLink.textContent = 'Resend OTP';
          resendOtpLink.style.pointerEvents = 'none';
          resendOtpLink.style.opacity = '0.5';
          timerInterval = setInterval(() => {
            let min = Math.floor(timerSeconds / 60);
            let sec = timerSeconds % 60;
            timerSpan.textContent = `${min.toString().padStart(2, '0')}:${sec.toString().padStart(2, '0')}`;
            if (timerSeconds <= 0) {
              clearInterval(timerInterval);
              resendOtpLink.style.pointerEvents = 'auto';
              resendOtpLink.style.opacity = '1';
              resendOtpLink.textContent = 'Resend OTP';
            } else {
              timerSeconds--;
            }
          }, 1000);
          if (typeof Swal !== 'undefined') {
            Swal.fire({
              icon: 'success',
              title: 'OTP Sent',
              text: 'OTP resent to your email.',
              confirmButtonColor: '#28a745'
            });
          } else {
            alert('OTP resent to your email.');
          }
        })
        .catch(() => {
          resendOtpLink.textContent = 'Resend OTP';
          resendOtpLink.style.pointerEvents = 'auto';
          resendOtpLink.style.opacity = '1';
          if (typeof Swal !== 'undefined') {
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'Failed to resend OTP. Please try again.',
              confirmButtonColor: '#d33'
            });
          } else {
            alert('Failed to resend OTP. Please try again.');
          }
        });
      }
    });
  </script>

  <script>
    function collectOTP() {
      const inputs = document.querySelectorAll('.otp-input');
      let otp = '';
      inputs.forEach(input => { otp += input.value; });
      document.getElementById('otp-full').value = otp;
      if (otp.length !== 6) {
        if (typeof Swal !== 'undefined') {
          Swal.fire({
            icon: 'warning',
            title: 'Incomplete OTP',
            text: 'Please enter all 6 digits of the OTP',
            confirmButtonColor: '#ffc107'
          });
        } else {
          alert('Please enter all 6 digits of the OTP');
        }
        return false;
      }
      return true; 
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>