<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= coupon ? "Edit Coupon" : "Create Coupon" %> - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
    }

    .admin-layout {
      display: flex;
      min-height: 100vh;
    }

    .main-content {
      flex: 1;
      padding: 20px;
      background-color: #fff;
      overflow-x: auto;
    }

    h2 {
      font-weight: 600;
      color: #343a40;
      margin-bottom: 1.5rem;
    }

    .form-container {
      max-width: 900px;
      margin: 0 auto;
      background: #fff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .form-section {
      margin-bottom: 2rem;
    }

    .form-section-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: #343a40;
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #343a40;
    }

    .form-label {
      font-weight: 500;
      color: #495057;
      margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
      border: 1px solid #ced4da;
      border-radius: 6px;
      padding: 0.75rem;
      font-size: 0.95rem;
      transition: border-color 0.3s, box-shadow 0.3s;
    }

    .form-control:focus, .form-select:focus {
      border-color: #343a40;
      box-shadow: 0 0 0 0.2rem rgba(52, 58, 64, 0.25);
    }

    .form-text {
      font-size: 0.875rem;
      color: #6c757d;
      margin-top: 0.25rem;
    }

    .row {
      margin-bottom: 1rem;
    }

    .btn-submit {
      background-color: #343a40;
      color: #fff;
      padding: 12px 30px;
      border: none;
      border-radius: 6px;
      font-weight: 500;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .btn-submit:hover {
      background-color: #23272b;
    }

    .btn-cancel {
      background-color: #6c757d;
      color: #fff;
      padding: 12px 30px;
      border: none;
      border-radius: 6px;
      font-weight: 500;
      font-size: 1rem;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: background-color 0.3s;
    }

    .btn-cancel:hover {
      background-color: #5a6268;
      color: #fff;
    }

    .form-actions {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid #dee2e6;
    }

    .input-group-text {
      background-color: #343a40;
      color: #fff;
      border: 1px solid #343a40;
    }

    /* Validation feedback styles */
    .form-control.is-valid {
      border-color: #28a745;
    }

    .form-control.is-invalid {
      border-color: #dc3545;
    }

    .invalid-feedback {
      display: block;
      width: 100%;
      margin-top: 0.25rem;
      font-size: 0.875rem;
      color: #dc3545;
    }

    .valid-feedback {
      display: block;
      width: 100%;
      margin-top: 0.25rem;
      font-size: 0.875rem;
      color: #28a745;
    }

    @media (max-width: 992px) {
      .main-content {
        padding: 15px;
      }
      
      .form-container {
        padding: 1.5rem;
      }
    }

    @media (max-width: 768px) {
      .admin-layout {
        flex-direction: column;
      }
      
      .main-content {
        padding: 10px;
      }

      .form-container {
        padding: 1rem;
      }

      .form-actions {
        flex-direction: column;
      }

      .btn-submit, .btn-cancel {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <div class="admin-layout">
    <%- include('../partials/sidebar') %>

    <div class="main-content">
      <%- include('../partials/adminNavbar', { pageTitle: coupon ? 'Edit Coupon' : 'Create Coupon' }) %>

      <div class="container py-3">
        <div class="form-container">
          <h2>
            <i class="fas fa-<%= coupon ? 'edit' : 'plus-circle' %> me-2"></i>
            <%= coupon ? "Edit Coupon" : "Create New Coupon" %>
          </h2>

          <form action="<%= coupon ? `/admin/edit-coupon/${coupon._id}` : '/admin/add-coupon' %>" method="POST">
            
            <!-- Basic Information -->
            <div class="form-section">
              <div class="form-section-title">
                <i class="fas fa-info-circle me-2"></i>Basic Information
              </div>

              <div class="mb-3">
                <label for="code" class="form-label">Coupon Code <span class="text-danger">*</span></label>
                <input 
                  type="text" 
                  id="code"
                  name="code" 
                  class="form-control" 
                  placeholder="e.g., SAVE20, WELCOME50"
                  required
                  value="<%= coupon ? coupon.code : '' %>"
                  style="text-transform: uppercase;">
                <div class="form-text">Enter a unique code that customers will use at checkout</div>
              </div>

              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea 
                  id="description"
                  name="description" 
                  class="form-control" 
                  rows="3"
                  placeholder="Describe what this coupon offers..."><%= coupon ? coupon.description : '' %></textarea>
                <div class="form-text">Optional: Add a description for internal reference</div>
              </div>
            </div>

            <!-- Discount Settings -->
            <div class="form-section">
              <div class="form-section-title">
                <i class="fas fa-percentage me-2"></i>Discount Settings
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="discountType" class="form-label">Discount Type <span class="text-danger">*</span></label>
                  <select id="discountType" name="discountType" class="form-select" required>
                    <option value="PERCENTAGE" <%= coupon && coupon.discountType === "PERCENTAGE" ? "selected" : "" %>>Percentage (%)</option>
                    <option value="FLAT" <%= coupon && coupon.discountType === "FLAT" ? "selected" : "" %>>Fixed Amount (₹)</option>
                  </select>
                </div>

                <div class="col-md-6 mb-3">
                  <label for="discountValue" class="form-label">Discount Value <span class="text-danger">*</span></label>
                  <div class="input-group">
                    <span class="input-group-text" id="discount-symbol">%</span>
                    <input 
                      type="number" 
                      id="discountValue"
                      name="discountValue" 
                      class="form-control" 
                      placeholder="e.g., 20"
                      min="0"
                      step="0.01"
                      required
                      value="<%= coupon ? coupon.discountValue : '' %>">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="minimumPurchase" class="form-label">Minimum Purchase Amount</label>
                  <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input 
                      type="number" 
                      id="minimumPurchase"
                      name="minimumPurchase" 
                      class="form-control" 
                      placeholder="0"
                      min="0"
                      value="<%= coupon ? coupon.minimumPurchase : 0 %>">
                  </div>
                  <div class="form-text">Minimum cart value required to use this coupon</div>
                </div>

                <div class="col-md-6 mb-3">
                  <label for="maxDiscount" class="form-label">Maximum Discount Cap</label>
                  <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input 
                      type="number" 
                      id="maxDiscount"
                      name="maxDiscount" 
                      class="form-control" 
                      placeholder="No limit"
                      min="0"
                      value="<%= coupon ? coupon.maxDiscount : '' %>">
                  </div>
                  <div class="form-text">Maximum discount amount (useful for percentage coupons)</div>
                </div>
              </div>
            </div>

            <!-- Validity Period -->
            <div class="form-section">
              <div class="form-section-title">
                <i class="fas fa-calendar-alt me-2"></i>Validity Period
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="validFrom" class="form-label">Valid From <span class="text-danger">*</span></label>
                  <input 
                    type="date" 
                    id="validFrom"
                    name="validFrom" 
                    class="form-control" 
                    required
                    value="<%= coupon ? coupon.validFrom.toISOString().split('T')[0] : '' %>">
                </div>

                <div class="col-md-6 mb-3">
                  <label for="validTo" class="form-label">Valid To <span class="text-danger">*</span></label>
                  <input 
                    type="date" 
                    id="validTo"
                    name="validTo" 
                    class="form-control" 
                    required
                    value="<%= coupon ? coupon.validTo.toISOString().split('T')[0] : '' %>">
                </div>
              </div>
            </div>

            <!-- Usage Limits -->
            <div class="form-section">
              <div class="form-section-title">
                <i class="fas fa-users me-2"></i>Usage Limits
              </div>

              <div class="mb-3">
                <label for="usageLimitPerUser" class="form-label">Usage Limit Per User</label>
                <input 
                  type="number" 
                  id="usageLimitPerUser"
                  name="usageLimitPerUser" 
                  class="form-control" 
                  placeholder="1"
                  min="1"
                  value="<%= coupon ? coupon.usageLimitPerUser : 1 %>">
                <div class="form-text">How many times each user can use this coupon</div>
              </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
              <button type="submit" class="btn-submit">
                <i class="fas fa-<%= coupon ? 'save' : 'plus' %> me-2"></i>
                <%= coupon ? "Update Coupon" : "Create Coupon" %>
              </button>
              <a href="/admin/coupons" class="btn-cancel">
                <i class="fas fa-times me-2"></i>Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Update discount symbol based on discount type
    document.getElementById('discountType').addEventListener('change', function() {
      const symbol = document.getElementById('discount-symbol');
      if (this.value === 'PERCENTAGE') {
        symbol.textContent = '%';
      } else {
        symbol.textContent = '₹';
      }
    });

    // Set initial symbol
    window.addEventListener('DOMContentLoaded', function() {
      const discountType = document.getElementById('discountType').value;
      const symbol = document.getElementById('discount-symbol');
      if (discountType === 'PERCENTAGE') {
        symbol.textContent = '%';
      } else {
        symbol.textContent = '₹';
      }
    });

    // Form validation and AJAX submission
    document.querySelector('form').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const form = e.target;
      const formData = new FormData(form);
      const submitButton = form.querySelector('.btn-submit');
      const originalText = submitButton.innerHTML;
      
      // Client-side validation
      const code = formData.get('code');
      const discountValue = formData.get('discountValue');
      const validFrom = formData.get('validFrom');
      const validTo = formData.get('validTo');
      
      // Check required fields
      if (!code || !code.trim()) {
        Swal.fire({
          icon: 'error',
          title: 'Validation Error',
          text: 'Coupon code is required and cannot be empty',
          confirmButtonColor: '#343a40'
        });
        document.getElementById('code').focus();
        return;
      }

      if (code.trim().length < 3) {
        Swal.fire({
          icon: 'error',
          title: 'Validation Error',
          text: 'Coupon code must be at least 3 characters long',
          confirmButtonColor: '#343a40'
        });
        document.getElementById('code').focus();
        return;
      }
      
      if (!discountValue || parseFloat(discountValue) <= 0) {
        Swal.fire({
          icon: 'error',
          title: 'Validation Error',
          text: 'Discount value must be greater than 0',
          confirmButtonColor: '#343a40'
        });
        document.getElementById('discountValue').focus();
        return;
      }

      const discountType = formData.get('discountType');
      if (discountType === 'PERCENTAGE' && parseFloat(discountValue) > 100) {
        Swal.fire({
          icon: 'error',
          title: 'Validation Error',
          text: 'Percentage discount cannot exceed 100%',
          confirmButtonColor: '#343a40'
        });
        document.getElementById('discountValue').focus();
        return;
      }
      
      if (!validFrom || !validTo) {
        Swal.fire({
          icon: 'error',
          title: 'Validation Error',
          text: 'Valid from and valid to dates are required',
          confirmButtonColor: '#343a40'
        });
        return;
      }
      
      // Date validation
      if (new Date(validTo) <= new Date(validFrom)) {
        Swal.fire({
          icon: 'error',
          title: 'Validation Error',
          text: 'Valid to date must be after valid from date',
          confirmButtonColor: '#343a40'
        });
        return;
      }
      
      // Show loading state
      submitButton.disabled = true;
      submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
      
      try {
        // Convert FormData to JSON
        const data = {};
        formData.forEach((value, key) => {
          data[key] = value;
        });
        
        const response = await fetch(form.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
          Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: result.message,
            confirmButtonColor: '#343a40'
          }).then(() => {
            window.location.href = '/admin/coupons';
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: result.message,
            confirmButtonColor: '#343a40'
          });
        }
      } catch (error) {
        console.error('Error:', error);
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Something went wrong. Please try again.',
          confirmButtonColor: '#343a40'
        });
      } finally {
        // Restore button state
        submitButton.disabled = false;
        submitButton.innerHTML = originalText;
      }
    });

    // Auto-uppercase coupon code and real-time validation
    let codeCheckTimeout;
    document.getElementById('code').addEventListener('input', function() {
      const originalValue = this.value;
      this.value = originalValue.toUpperCase();
      
      // Remove any non-alphanumeric characters except hyphens and underscores
      this.value = this.value.replace(/[^A-Z0-9_-]/g, '');
      
      // Visual feedback for code length
      if (this.value.length < 3) {
        this.style.borderColor = '#dc3545';
        this.title = 'Code must be at least 3 characters';
      } else if (this.value.length >= 3 && this.value.length <= 20) {
        this.style.borderColor = '#28a745';
        this.title = 'Valid code format';
      } else {
        this.style.borderColor = '#ffc107';
        this.title = 'Code is getting long (max 20 characters recommended)';
      }
    });

    // Discount value validation
    document.getElementById('discountValue').addEventListener('input', function() {
      const discountType = document.getElementById('discountType').value;
      const value = parseFloat(this.value);
      
      if (discountType === 'PERCENTAGE' && value > 100) {
        this.style.borderColor = '#dc3545';
        this.title = 'Percentage cannot exceed 100%';
      } else if (value <= 0) {
        this.style.borderColor = '#dc3545';
        this.title = 'Value must be greater than 0';
      } else {
        this.style.borderColor = '#28a745';
        this.title = '';
      }
    });

    // Date validation
    function validateDates() {
      const validFrom = document.getElementById('validFrom');
      const validTo = document.getElementById('validTo');
      
      if (validFrom.value && validTo.value) {
        if (new Date(validTo.value) <= new Date(validFrom.value)) {
          validTo.style.borderColor = '#dc3545';
          validTo.title = 'End date must be after start date';
        } else {
          validTo.style.borderColor = '#28a745';
          validTo.title = '';
        }
      }
    }

    document.getElementById('validFrom').addEventListener('change', validateDates);
    document.getElementById('validTo').addEventListener('change', validateDates);
  </script>
</body>
</html>
