<footer class="main-footer">
    <style>
        .main-footer {
            background-color: #1a1a1a;
            color: #ffffff;
            padding: 4rem 2rem 1rem;
            margin-top: auto;
            width: 100%;
        }

        .footer-columns {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            max-width: 1400px;
            margin: 0 auto;
            padding-bottom: 2rem;
        }

        .footer-column h4 {
            color: #fff;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .footer-column h5 {
            color: #fff;
            font-size: 1.1rem;
            margin-bottom: 1rem;
            font-weight: 500;
        }

        .footer-column p {
            color: #b3b3b3;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .footer-column ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .footer-column ul li {
            margin-bottom: 0.5rem;
        }

        .footer-column ul li a {
            color: #b3b3b3;
            text-decoration: none;
            font-size: 0.95rem;
            transition: color 0.3s ease;
        }

        .footer-column ul li a:hover {
            color: #ffffff;
        }

        .footer-contact {
            margin-top: 1rem;
        }

        .footer-contact p {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .social-links {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .social-links a {
            color: #b3b3b3;
            font-size: 1.5rem;
            transition: color 0.3s ease;
        }

        .social-links a:hover {
            color: #ffffff;
        }

        .payment-methods {
            display: flex;
            gap: 1rem;
            color: #b3b3b3;
            font-size: 1.8rem;
        }

        .footer-bottom {
            border-top: 1px solid #333;
            padding-top: 1rem;
            text-align: center;
            max-width: 1400px;
            margin: 0 auto;
        }

        .copyright {
            color: #b3b3b3;
            font-size: 0.9rem;
            margin: 0;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .main-footer {
                padding: 2rem 1rem 1rem;
            }

            .footer-columns {
                grid-template-columns: repeat(2, 1fr);
                gap: 1.5rem;
            }

            .footer-column:first-child {
                grid-column: 1 / -1;
            }
        }

        @media (max-width: 480px) {
            .footer-columns {
                grid-template-columns: 1fr;
            }

            .payment-methods {
                justify-content: center;
            }

            .social-links {
                justify-content: center;
            }
        }
    </style>
