<div class="bg-white d-flex justify-content-between align-items-center py-3 px-4 border-bottom">
  <h5 class="mb-0"><%= pageTitle || 'Dashboard Overview' %></h5>
  <div class="d-flex align-items-center gap-2">
<span id="adminNamePlaceholder"><%= name %></span>
    <i class="fa-solid fa-user"></i>
    <!-- <button id="logoutBtn" class="btn btn-outline-danger btn-sm ms-3">Logout</button> -->
  </div>
</div>

<script>
  
  document.getElementById("logoutBtn").addEventListener("click", async function() {
    try {
      const response = await fetch("/user/logout", {
        method: "POST",
        credentials: "include"
      });
      if (response.ok) {
        window.location.href = "/user/login";
      } else {
        if (typeof Swal !== 'undefined') {
          Swal.fire({
            icon: 'error',
            title: 'Logout Failed',
            text: 'Logout failed',
            confirmButtonColor: '#d33'
          });
        } else {
          alert("Logout failed");
        }
      }
    } catch (err) {
      if (typeof Swal !== 'undefined') {
        Swal.fire({
          icon: 'error',
          title: 'Logout Error',
          text: 'Logout error',
          confirmButtonColor: '#d33'
        });
      } else {
        alert("Logout error");
      }
    }
  });
</script>
