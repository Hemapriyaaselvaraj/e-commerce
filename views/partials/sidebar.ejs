<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>ToughToes Dashboard Sidebar</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <!-- Bootstrap and FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" />

  <style>
    .sidebar {
      min-height: 100vh;
      background-color: #212529;
      color: #fff;
      transition: all 0.3s;
    }
    .sidebar h4 {
      text-align: center;
    }
    .sidebar .nav-link {
      color: #adb5bd;
      padding: 10px 16px;
      border-radius: 5px;
      transition: background 0.2s, color 0.2s;
      display: flex;
      align-items: center;
    }
    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
      background: #495057;
      color: #fff;
      text-decoration: none;
    }
    .sidebar .nav-link i {
      margin-right: 8px;
    }
    @media (max-width: 992px) {
      .sidebar {
        width: 100%;
        min-height: auto;
        position: relative;
        padding: 10px 0;
        z-index: 1001;
      }
      .sidebar ul {
        flex-direction: row !important;
        justify-content: space-around !important;
        gap: 0 !important;
      }
      .sidebar li {
        display: inline-block !important;
      }
      .sidebar .nav-link {
        padding: 10px 10px;
        border-radius: 0;
        text-align: center;
        min-width: 90px;
        display: block;
      }
      .sidebar h4 {
        padding-bottom: 10px;
        border-bottom: 1px solid #373b3e;
        margin-bottom: 10px;
      }
    }
  </style>
</head>
<body>
  <div class="col-md-2 sidebar p-3">
    <h4 class="mb-4">ToughToes</h4>
    <ul class="nav flex-column d-flex gap-2">
      <li>
        <a href="/admin/Dashboard" class="nav-link text-white"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
      </li>
      <li>
        <a href="/admin/orders?page=1" class="nav-link text-white"><i class="fa fa-box me-2"></i>Orders</a>
      </li>
      <li>
        <a href="/admin/products?limit=5&skip=0" class="nav-link text-white" id="products-link"><i class="fa fa-tags me-2"></i>Products</a>
      </li>
      <li>
        <a href="/admin/customers?page=1" class="nav-link text-white"><i class="fa fa-users me-2"></i>Customers</a>
      </li>
      <li>
        <a href="#" class="nav-link text-white"><i class="fa fa-ticket me-2"></i>Coupons</a>
      </li>
      <li>
        <a href="/admin/products/configuration" class="nav-link text-white"><i class="fa fa-layer-group me-2"></i>Product Configuration</a>
      </li>
      <li>
        <a href="#" class="nav-link text-white"><i class="fa fa-undo me-2"></i>Refund/Return</a>
      </li>
      <li>
        <a href="#" class="nav-link text-white"><i class="fa fa-star me-2"></i>Review</a>
      </li>
      <li class="mt-4">
        <a href="#" class="nav-link text-white" id="sidebar-logout-btn"><i class="fa fa-sign-out-alt me-2"></i>Sign Out</a>
      </li>
    </ul>
  </div>
  <script>
    const sidebarLogoutBtn = document.getElementById("sidebar-logout-btn");
    if (sidebarLogoutBtn) {
      sidebarLogoutBtn.addEventListener("click", async function (e) {
        e.preventDefault();
        try {
          const response = await fetch("/admin/logout", {
            method: "GET",
            credentials: "include",
          });
          if (response.ok) {
            window.location.href = "/user/login";
          } else {
            alert("Logout failed");
          }
        } catch (err) {
          alert("Logout error");
        }
      });
    }
  </script>
</body>
</html>
